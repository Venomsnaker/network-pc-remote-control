<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="styling.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pcremotecontrol.controllers.MenuController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="900.0">
         <left>
            <VBox prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #343434; -fx-alignment: center;" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" prefHeight="75.0" prefWidth="200.0" stylesheets="@styling.css" text="Start" textFill="ALICEBLUE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="75.0" prefWidth="200.0" stylesheets="@styling.css" text="Guide" textFill="ALICEBLUE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="75.0" prefWidth="200.0" stylesheets="@styling.css" text="Mails Library" textFill="ALICEBLUE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="75.0" prefWidth="200.0" stylesheets="@styling.css" text="Apps Library" textFill="ALICEBLUE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" prefHeight="75.0" prefWidth="200.0" stylesheets="@styling.css" text="Credits" textFill="ALICEBLUE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button id="exitButton" mnemonicParsing="false" prefHeight="75.0" prefWidth="200.0" stylesheets="@styling.css" text="Exit" textFill="ALICEBLUE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </left>
         <top>
            <HBox prefHeight="125.0" prefWidth="900.0" style="-fx-background-color: #100C08;" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="CENTER" prefHeight="125.0" prefWidth="250.0" text="PC Remote Control" textAlignment="CENTER" textFill="ALICEBLUE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </top>
         <center>
            <VBox style="-fx-background-color: #696969;" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</AnchorPane>
